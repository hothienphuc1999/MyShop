<Window x:Class="MyShop.UC.MasterData.EditCategoryWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MyShop.UC.MasterData"
        mc:Ignorable="d"
        Title="Add Category" Height="300" Width="300">
    <Grid>
        <TextBlock Text="Category" TextAlignment="Center" FontSize="24" FontWeight="Bold"></TextBlock>
        <Canvas Height="30" Width="250" Margin="20,53,23.333,187.667"
                    HorizontalAlignment="Center">
            <Label Name="catNameLabel" Content="_Category Name" Height="30" FontStyle="Italic"
                           Foreground="Gray"/>
            <TextBox Name="catNameTextBox" Height="30" Width="250" LostFocus="CatNameTextBox_LostFocus" GotFocus="CatNameTextBox_GotFocus"
                         Background="Transparent" Padding="5 5" 
                        >
            </TextBox>
        </Canvas>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Margin="5" Width="70" Height="30" Content="Save" Click="Button_Click" ></Button>
            <Button Margin="5" Width="70" Height="30" Content="Cancel" Click="Button_Click_1"></Button>
        </StackPanel>
    </Grid>
</Window>
